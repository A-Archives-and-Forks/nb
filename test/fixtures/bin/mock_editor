#!/usr/bin/env bash

# Allow clobber. More info:
# https://stackoverflow.com/a/6762399
set +o noclobber

# _mock_editor()
#
# Usage:
#   _mock_editor <filename>
#
# Description:
#   Save a string as the only content in a new file named <filename>.
_mock_editor() {
  for __arg in "${@:-}"
  do
    if [[ ! "${__arg}" =~ ^-- ]]
    then
      _filename="${__arg}"
    fi
  done

  if [[ -z "${_filename}" ]]
  then
    printf "Usage: _mock_editor <filename>\n"
    return 1
  fi

  printf "# mock_editor %s\n" "${_filename%.*}" >> "${_filename}"
}

_mock_editor "$@"
