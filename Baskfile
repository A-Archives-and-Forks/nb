#!/usr/bin/env bash
###############################################################################
# Baskfile
#
# Run With Bask: https://github.com/xwmx/bask
###############################################################################

desc "g:web" <<HEREDOC
Usage:
  bask g:web

Description:
  Generate index.markdown.
HEREDOC
g:web() {
  local _target_file="./docs/index.markdown"

  [[ ! -f "${_target_file:?}" ]] &&
    _exit_1 printf "./docs/index.markdown not found.\\n"

  cat << HEREDOC > "${_target_file:?}"
---
layout: home
title: nb Â· CLI plain-text note-taking, bookmarking, and archiving.
permalink: /
---

$(cat ./README.md)
HEREDOC
}
